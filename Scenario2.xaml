<Page
    x:Class="Hot3dxBlankApp2.Scenario2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="using:Hot3dxBlankApp2"
mc:Ignorable="d"
Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="500">
    
    
    <Grid Padding="12">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
            <TextBlock Text="Scenario 2" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Placeholder page. Replace with migrated content (e.g. RotoDraw)"/>
        </StackPanel>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid Margin="12,10,12,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
                    <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                Launching at a custom size
                    </TextBlock>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap">
                    An app can request that it have a specific size at launch,
                    if the windowing model of the operating system allows views to be resized freely.
                    Check or uncheck the box below, and then exit and restart the app.
                        </TextBlock>
                        <CheckBox x:Name="LaunchAtSize" Margin="0,10,0,0"
                          Content="Launch at 1400 × 1200"
                          Click="LaunchAtSize_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>
