<Page
    x:Class="Hot3dxBlankApp2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Hot3dxBlankApp2"
    mc:Ignorable="d">

    <!-- Left Side Controls -->
    <SwapChainPanel x:ConnectionId='2' x:Name="swapChainPanel" Margin="500,0,0,0" Visibility="Visible">
        <SwapChainPanel.RowDefinitions>
            <RowDefinition Height="93*"/>
            <RowDefinition Height="7*"/>
        </SwapChainPanel.RowDefinitions>
        <StackPanel x:ConnectionId='3' x:Name="HeaderPanel" HorizontalAlignment="Left"  Margin="-500,0,0,0" Width="500" Background="DarkGreen" Visibility="Visible" Grid.RowSpan="2">
            <!-- Right Side Controls 
    <SwapChainPanel x:Name="swapChainPanel" Margin="0,0,500,0">
            <StackPanel x:Name="HeaderPanel" HorizontalAlignment="Left" Margin="866,0,-500,0" Width="500" Background="DarkGreen"  Visibility="Collapsed">
        -->
            <!--
        <Popup Margin="0,0,0,0" x:Name="ErrorPopup" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="400" IsOpen="True" FocusVisualPrimaryBrush="#FF00F3FF" Visibility="Visible">
            <StackPanel x:Name="ErrorMessageStackPanel" Background="LightBlue" Width="400" Height="400" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="5,5,5,5" Visibility="Visible">
                <TextBlock x:Name="ErrorMessage" HorizontalAlignment="Center" VerticalAlignment="Top" Width="380" Margin="10,10,10,10" Height="80" FontSize="28" FontWeight="Bold" Text="Error Message"/>
                <TextBox x:Name="ErrorMsgTextBox" TextWrapping="Wrap" Text=" Something Horrible occurred"/>
                <Button x:Name="Okay" Content="Okay" Margin="0,50,0,0" Height="50" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="ErrorMsgButton_Click"></Button>
            </StackPanel>
        </Popup>
        -->
            <Grid Background="#FFFFFFFF">
                <!-- "{ThemeResource ApplicationPageBackgroundThemeBrush}" -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <SplitView x:ConnectionId='6' x:Name="Splitter" OpenPaneLength="100" MinHeight="700" Width="500" HorizontalAlignment="Right" Margin="0,0,0,0" 
           IsPaneOpen="True" Grid.Row="2" DisplayMode="Inline">
                    <SplitView.Pane>
                        <RelativePanel Height="Auto">
                            
                            <TextBlock x:ConnectionId='12' x:Name="Hot3dxBlankApp2" Text=" Scenario Menu" Style="{StaticResource SampleHeaderTextStyle}" TextWrapping="Wrap" Width="98" FontWeight="Bold"/>
                            <!-- Provide an AutomationProperties.Name for a list to a screen reader. A shipping app would localize this. -->
                            <ListBox x:ConnectionId='13' x:Name="ScenarioControl"                                                     AutomationProperties.Name="Scenarios"
                               SelectionMode="Single" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0"
                               VerticalAlignment="Top" RelativePanel.Below="Hot3dxBlankApp2" Margin="0,0,0,0" RelativePanel.Above="FooterPanel">
                                <ListBox.ItemTemplate>
                                    <DataTemplate                                >
                                        <TextBlock x:ConnectionId='21'                       Padding="8" />
                                        <!--TextBlock Text="{Binding Converter={StaticResource ScenarioConverter}}" FontSize="10" FontStyle="Italic" FontFamily="Arial"/-->
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <StackPanel x:ConnectionId='14' x:Name="FooterPanel" Orientation="Vertical" RelativePanel.AlignBottomWithPanel="True">
                                <Image Source="Assets/MakerC1.ico" AutomationProperties.Name="Hot3dx Logo" Stretch="None" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                <TextBlock x:ConnectionId='15' x:Name="Copyright" Text="&#xA9; Jeff Kubitz. All rights reserved." Style="{StaticResource CopyrightTextStyle}"
                   RelativePanel.Above="LinksPanel" Margin="10,10,0,0"
                   TextWrapping="Wrap"/>
                                <StackPanel x:ConnectionId='16' x:Name="LinksPanel" Orientation="Horizontal" Margin="10,0,0,10" Height="50">
                                    <HyperlinkButton x:ConnectionId='17' x:Name="Trademarks" Margin="7,-35,0,0" Content="TradeMarks" Tag="https://github.com/hot3dx/Hot3dxBlankApp2WinRTVS2026/blob/main/Assets/Square256x256.png"
                                                                       FontSize="12" FontWeight="Bold" Style="{StaticResource HyperlinkStyle}" />
                                    <TextBlock Text="|"  Style="{StaticResource SeparatorStyle}" VerticalAlignment="Top" />
                                    <HyperlinkButton x:ConnectionId='18' x:Name="SourceCode" Margin="-73,0,0,0" Content="Source Code" Tag="http://github.com/hot3dx/Hot3dxBlankApp2WinRTVS2026"
                                                             FontSize="12" FontWeight="Bold" Style="{StaticResource HyperlinkStyle}" />
                                    <TextBlock Text="|"  Style="{StaticResource SeparatorStyle}" VerticalAlignment="Center" />
                                    <HyperlinkButton x:ConnectionId='19' Margin="-77,35,0,0" x:Name="PrivacyLink" Content="Privacy Policy"
                                     Tag="http://github.com/hot3dx/Hot3dxBlankApp2WinRTVS2026/PrivacyPolicy.md"                      
                                     FontSize="12" FontWeight="Bold" Style="{StaticResource HyperlinkStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </RelativePanel>
                    </SplitView.Pane>
                    <RelativePanel Grid.Row="1">
                        <Frame x:ConnectionId='22' x:Name="ScenarioFrame"  Margin="0,5,0,0" RelativePanel.AlignTopWithPanel="True" RelativePanel.Above="StatusPanel" Background="GreenYellow"
               RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True"/>
                        <StackPanel x:ConnectionId='23' x:Name="StatusPanel"  Orientation="Vertical"
                    RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" 
                    RelativePanel.AlignLeftWithPanel="True">
                            <!--TextBlock x:Name="StatusLabel" Margin="0,0,0,0" TextWrapping="Wrap" Text="Status:" /-->
                            <Border x:ConnectionId='24' x:Name="StatusBorder" Margin="0,-105,0,0" Visibility="Visible" VerticalAlignment="Top">
                                <ScrollViewer VerticalScrollMode="Enabled"  VerticalScrollBarVisibility="Visible" MaxHeight="105">
                                    <!-- Use LiveSetting to enable screen readers to announce the status update. -->
                                    <TextBlock x:ConnectionId='25' x:Name="StatusBlock" FontWeight="Bold" AutomationProperties.LiveSetting="Assertive"  
                   MaxWidth="{Binding ElementName=Splitter, Path=ActualWidth}" Margin="10,0,10,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="105"/>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </RelativePanel>
                </SplitView>
                <StackPanel x:ConnectionId='7' x:Name="HeaderPanel1" Orientation="Horizontal">
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Grid.Row="1">
                        <ToggleButton x:ConnectionId='10' Style="{StaticResource SymbolButton}"                            VerticalAlignment="Top" Foreground="{ThemeResource ApplicationForegroundThemeBrush}">
                            <ToggleButton.Content>
                                <FontIcon x:ConnectionId='11' x:Name="Hamburger" FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;" Margin="0,15,0,0"/>
                            </ToggleButton.Content>
                        </ToggleButton>
                    </Border>
                    <!-- Use AutomationProperties.AccessibilityView to let a screen reader know that the image is purely decorative.
 (If the Image conveyed useful information we'd not use AccessibilityView, but instead provide a localized 
 name for the Image to convey its purpose.) -->
                    <Image x:ConnectionId='8' x:Name="Hot3dxLogo" Stretch="None" Source="Assets/MakerC1.ico" Margin="0,15,0,0" AutomationProperties.AccessibilityView="Raw" />
                    <TextBlock x:ConnectionId='9' x:Name="Header" Text="Hot3dx DirectX 12 Xaml C/C++ WinRT Sample" Style="{StaticResource TagLineTextStyle}" Margin="50,15,0,0" FontSize="16" FontWeight="Bold" />
                </StackPanel>
            </Grid>
            <Button x:ConnectionId='4' x:Name="myButton" Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"                             Background="#FFFFFF03" Foreground="#FF131300" FontWeight="Bold">Click Me 1</Button>
            <Button x:ConnectionId='5' x:Name="myButton2" Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"                             Background="#FFFFFF03" Foreground="#FF101000" FontWeight="Bold">Click Me 2</Button>

        </StackPanel>


    </SwapChainPanel>
</Page>

