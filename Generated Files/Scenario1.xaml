<Page
    x:Class="Hot3dxBlankApp2.Scenario1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Hot3dxBlankApp2"
    mc:Ignorable="d">

    <Grid Padding="12">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12" Background="White" Height="900" Width="500">
            <TextBlock x:ConnectionId='2' x:Name="textBlockScenario1" Text="Scenario 1" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" RequestedTheme="Light" />
            <!-- Centered huge Sponsor button -->
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button x:ConnectionId='3' x:Name="SponsorButton"
                             
        HorizontalAlignment="Center"
        Width="350"
        Height="320"
        FontWeight="Bold"
        Padding="20"
        Background="#FF1B6CE2"
        Foreground="White"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        AutomationProperties.Name="Sponsor Button"
        ToolTipService.ToolTip="Open sponsor page (GitHub Sponsors)">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                        <TextBlock Text="❤️ SUPPORT THE PROJECT"
                   FontSize="28"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
                        <TextBlock Text="Click to Sponsor"
                   FontSize="18"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

